            </div>
            <div class="form-group">
                <label asp-for="HoursStudied" class="control-label">Hours Studied</label>
                <input asp-for="HoursStudied" class="form-control" />
                <span asp-validation-for="HoursStudied" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <button style="background-color:blue; border-radius:5px; border:none">
        <a asp-action="Index" style="text-decoration:none; color:white">Back to List</a>
    </button>
</div>

