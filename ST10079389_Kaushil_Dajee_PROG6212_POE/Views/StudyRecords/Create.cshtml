@model ST10079389_Kaushil_Dajee_PROG6212_POE.Models.StudyRecord

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
@*Can create a record for when u studied*@
<h4>StudyRecord</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="ModuleId" class="control-label">Module Name</label>
                    <select asp-for="ModuleId" class="form-control" asp-items="ViewBag.ModuleId"></select>
                </div>
                <label asp-for="StudyDates" class="control-label">Date Studied</label>
                <input asp-for="StudyDates" class="form-control" type="date"/>
