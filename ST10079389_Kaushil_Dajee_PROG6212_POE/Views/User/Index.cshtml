@model ST10079389_Kaushil_Dajee_PROG6212_POE.Models.User

@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" href="~/css/LoginStyle.css" />
</head>
<h1>Midnight Purple</h1>
<br />
<h1>Login</h1>

<h4>Account Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Username</label>
                <input asp-for="Name" class="form-control" autocomplete="off" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" class="form-control" autocomplete="off" type="password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" style="border:none; width:250px; height:auto; background-color:purple; font-size:20px"/>
            </div>
            <hr />
            <div class="form-group">
                <p>Don't have an account?</p>
                <a href="/User/Create" class="btn btn-primary" style="border:none; width:250px; height:auto; background-color:purple; font-size:20px">Register Account</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}