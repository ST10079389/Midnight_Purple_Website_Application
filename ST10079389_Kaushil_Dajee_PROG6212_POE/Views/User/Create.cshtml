@model ST10079389_Kaushil_Dajee_PROG6212_POE.Models.User

@{
    ViewData["Title"] = "Create";
}
<head>
    <link rel="stylesheet" href="~/css/LoginStyle.css" />
</head>
<h1>Midnight Purple</h1>
<br />
<h1>Register</h1>
<h4>Account Details</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Username</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" class="form-control" type="password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" style="border:none; width:250px; height:auto; background-color:purple; font-size:20px" />
            </div>
        </form>
    </div>
<hr />
<div class="form-group">
    <p>Already have an account?</p>
    <a class="btn btn-primary" asp-action="Index" style="border:none; width:250px; height:auto; background-color:purple; font-size:20px">Login</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
