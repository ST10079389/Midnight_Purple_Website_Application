            </div>
            <div class="form-group">
                <label asp-for="ModuleCode" class="control-label">Module Code</label>
                <input asp-for="ModuleCode" class="form-control" />
                <span asp-validation-for="ModuleCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfCredits" class="control-label">Number Of Credits</label>
                <input asp-for="NumberOfCredits" class="form-control" />
                <span asp-validation-for="NumberOfCredits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassHours" class="control-label">Hours of Class Per Week</label>
                <input asp-for="ClassHours" class="form-control" />
                <span asp-validation-for="ClassHours" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<hr />
<div>
    <button style="background-color:blue; border-radius:5px; border:none">
        <a asp-action="Index" style="text-decoration:none; color:white">Back to List</a>
    </button>
</div>

