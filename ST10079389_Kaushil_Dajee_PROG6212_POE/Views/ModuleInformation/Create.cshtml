@model ST10079389_Kaushil_Dajee_PROG6212_POE.Models.ModuleInformation

@{
    ViewData["Title"] = "Create";
}
@*basic create page used to create information*@
<h1>Create</h1>

<h4>Module Information</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ModuleName" class="control-label">Module Name</label>
                <input asp-for="ModuleName" class="form-control" />
